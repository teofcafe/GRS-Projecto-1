ifconfig eth0 10.20.75.2 netmask 255.255.255.0 up
ifconfig eth1 192.168.0.1 netmask 255.255.255.0 up

route add default gw 10.20.75.1 dev eth0

/etc/init.d/dhcp3-server start

/sbin/iptables -F

/sbin/iptables -t nat -A POSTROUTING -o eth0 -j MASQUERADE 

/sbin/iptables -A FORWARD -i eth0 -o eth1 -m state --state RELATED,ESTABLISHED -j ACCEPT

#stb so pode comunicar com o wallen-garden content por tcp
/sbin/iptables -A FORWARD -i eth1 -o eth0 -s 192.168.0.5 -d 10.20.72.6 ! -p tcp -j REJECT

#stb so pode comunicar com o vod por tcp com porto 22 de destino
/sbin/iptables -A FORWARD -i eth1 -o eth0 -s 192.168.0.5 -d 10.20.72.3 -p tcp --dport 22 -j ACCEPT

#stb so pode comunicar com o vod por udp
/sbin/iptables -A FORWARD -i eth1 -o eth0 -s 192.168.0.5 -d 10.20.72.3 -p udp -j ACCEPT

#stb so pode comunicar com o vod por icmp
/sbin/iptables -A FORWARD -i eth1 -o eth0 -s 192.168.0.5 -d 10.20.72.3 -p icmp -j ACCEPT
/sbin/iptables -A FORWARD -i eth1 -o eth0 -s 192.168.0.5 -d 10.20.72.3 -j REJECT

#stb so pode comunicar com maquinas pertencentes ao IPTV headend
/sbin/iptables -A FORWARD -i eth1 -o eth0 -s 192.168.0.5 -d 10.20.72.0/24 -j ACCEPT
/sbin/iptables -A FORWARD -i eth1 -o eth0 ! -s 192.168.0.5 -j ACCEPT

/sbin/iptables -A FORWARD -i eth1 -o eth0 -j REJECT

snmpd

